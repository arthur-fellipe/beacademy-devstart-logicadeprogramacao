// Exercício 04 - Imprimir variáveis nome, peso e altura
programa 
{
cadeia nome
real peso, altura
	funcao inicio()
	{
		escreva("Digite o seu nome:")
		leia (nome)
		escreva("Digite o seu peso:")
		leia (peso)
		escreva("Digite a sua altura:")
		leia (altura)
		escreva ("Nome: " + nome + "\n")
		escreva ("Peso: " + peso + "kg" + "\n")
		escreva ("Altura: " + altura + "mts")
	}
}
